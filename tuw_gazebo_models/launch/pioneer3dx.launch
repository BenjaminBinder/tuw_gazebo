<launch>

  <arg name="rviz" default="0" />
  <arg name="room" default="cave" />
  <arg name="physics" default="ode"/> <!-- ode, bullet, dart -->
  <env name="GAZEBO_MODEL_PATH" value="$(find tuw_gazebo_models)/models/"/> 
  
   <!-- Gazebo  -->
  <include file="$(find tuw_gazebo_models)/launch/empty_world.launch">
     <arg name="physics" value="$(arg physics)" />
   </include>

  <!-- Robot with diff drive -->
  <include file="$(find tuw_gazebo_models)/launch/pioneer3dx.gazebo.launch">
     <arg name="robot_name" value="r1" />
     <arg name="robot_position" value="-x -7.0 -y -7.0 -z 0.01 -Y 0.78" />
   </include>
     
  <node name="$(arg room)" pkg="gazebo_ros" type="spawn_model" args="-file $(find tuw_gazebo_models)/models/$(arg room)/model.sdf -sdf -x 0 -y -0 -z 0 -model $(arg room)" />
     
  <!-- RVIZ   -->
  <group if="$(arg rviz)">
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find tuw_gazebo_models)/launch/pioneer3dx.rviz" />
  </group>
  
</launch>
